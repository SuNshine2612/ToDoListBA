
@switch(Status)
{
	case Status.Open:
		<span class="badge badge-info">@nameof(Status.Open)</span>
		break;

	case Status.Inprogress:
		<span class="badge badge-warning">@nameof(Status.Inprogress)</span>
		break;

	case Status.Resolved:
		<span class="badge badge-light">@nameof(Status.Resolved)</span>
		break;

	case Status.Cancel:
		<span class="badge badge-dark">@nameof(Status.Cancel)</span>
		break;

	case Status.Done:
		<span class="badge badge-success">@nameof(Status.Done)</span>
		break;
}

@code {

	[Parameter]
	public Status Status { get; set; }
}